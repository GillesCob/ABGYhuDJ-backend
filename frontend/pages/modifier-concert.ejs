<section class="container my-5">
  <h1 class="p-4">Modifier le concert</h1>
  <form action="/modifier-concert/<%= concert.id %>" method="POST">
    <div class="mb-3">
      <label for="ville" class="form-label">Ville</label>
      <input type="text" class="form-control" id="ville" name="ville" value="<%= concert.ville %>" required>
    </div>

    <div class="mb-3">
      <label for="date" class="form-label">Date</label>
      <input type="date" class="form-control" id="date" name="date" value="<%= concert.date.toISOString().split('T')[0] %>" required>
    </div>

    <div class="mb-3">
      <label for="salle" class="form-label">Salle</label>
      <input type="text" class="form-control" id="salle" name="salle" value="<%= concert.salle %>" required>
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a href="/dates-tournee" class="btn btn-secondary ms-2">Annuler</a>
  </form>

    <h1 class="p-4 mt-4">Supprimer le concert</h1>
    <form action="/supprimer-concert/<%= concert.id %>" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce concert ?');">
        <button type="submit" class="btn btn-danger">Supprimer</button>
        <a href="/dates-tournee" class="btn btn-secondary ms-2">Annuler</a>
    </form>

</section>
