<section id="inscription" class="inscription-section ">
  <div class="container my_card">
    <h2 class="text-center mb-4 p-3">Inscris-toi !</h2>
    
    <form id="inscriptionForm">
      <div class="mb-3">
        <label for="nom" class="form-label">Nom</label>
