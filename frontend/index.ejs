    <!-- Section Formulaire de contact -->
    <section id="contact" class="contact-section">
        <div class="container">
            <h2 class="text-center mb-4 mt-4 form-container">Contacte-nous !</h2>
            <form id="contactForm">
                <div class="mb-3">
                    <label for="name" class="form-label" >Nom</label>
                    <input type="text" class="form-control" id="name-contact-form" placeholder="Votre nom" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email-contact-form" placeholder="Votre email" required>
                    <div id="error-message" style="color: red; display: none;">Veuillez saisir une adresse email valide.</div>

                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message-contact-form" rows="4" placeholder="Votre message" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Envoyer</button>
            </form>
        </div>
    </section>
